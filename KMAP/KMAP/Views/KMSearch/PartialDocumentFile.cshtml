@using KMAP.Models
@using KMAP.Controllers.General
@model IEnumerable<KMDocumentFile>
@{ 
    //http://km.iec.inventec/ESP/download.aspx?documentId=3575&fileName=KMAP.zip
}
    <div>
        <table class="table table-bordered table-striped table-condensed" style="width:100%">
            <tr>
                <th>DisplayName</th>
                <th>FIleSize</th>
            </tr>
            @foreach (var item in Model)
            {
                string DocId = item.DocumentId;
                foreach (var file in item.kmFiles)
                {
                    <tr>
                        <td><a href=@file.GetFileUrl(DocId:DocId) target="_blank">@Html.DisplayFor(modelItem => file.DisplayName)</a></td>
                        <td>@Html.DisplayFor(modelItem => file.FileSize)</td>
                    </tr>
                }
            }
        </table>
    </div>
